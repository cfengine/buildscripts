#!/usr/bin/make -f

clean:
	dh_testdir
	dh_testroot

	dh_clean

install: 
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	$(MAKE) install DESTDIR=$(CURDIR)/debian/tmp PREFIX=/usr CFG_DIR=/etc

	rm -rf $(CURDIR)/debian/tmp/usr/share/info
	rm -rf $(CURDIR)/debian/tmp/usr/share/emacs
	rm -rf $(CURDIR)/debian/tmp/usr/share/man

binary-indep: install
	dh_testdir
	dh_testroot
	dh_install --sourcedir=debian/tmp
	dh_fixperms
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep 
.PHONY: build clean binary-indep binary-arch binary install configure
