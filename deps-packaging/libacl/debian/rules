#!/usr/bin/make -f

PREFIX= $(BUILDPREFIX)
LDFLAGS="-L$(BUILDPREFIX)/lib"
clean:
	dh_testdir
	dh_testroot

	dh_clean

build: build-stamp
build-stamp:
	dh_testdir

	zcat acl.destdir.diff.gz | $PATCH -p1 || true

	./configure --prefix=$(PREFIX) --enable-gettext=no LDFLAGS=$(LDFLAGS)

	make

	touch build-stamp

install: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs

	make install -C getfacl DESTDIR=$(CURDIR)/debian/tmp DIST_ROOT=/
	make install-dev install-lib DESTDIR=$(CURDIR)/debian/tmp DIST_ROOT=/

# configure fails because acl.h doens't exist in include dir
# it's placed by default in include/sys

	cp $(CURDIR)/debian/tmp$(PREFIX)/include/sys/acl.h $(CURDIR)/debian/tmp$(PREFIX)/include/

	rm -rf $(CURDIR)/debian/tmp$(PREFIX)/lib/*.a
	rm -rf $(CURDIR)/debian/tmp$(PREFIX)/lib/*.la
	rm -rf $(CURDIR)/debian/tmp$(PREFIX)/libexec

binary-indep: build install

binary-arch: build install
	dh_testdir
	dh_testroot
	dh_install --sourcedir=debian/tmp
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
